<div class="eeprom-info">
    <div class="card">
        <p>
            <strong>{{ _("Firmware Name:") }}</strong> <span data-bind="text: info.name"></span>
        </p>
        <!-- ko foreach: info.additional -->
        <p>
            <strong data-bind="text: name"></strong>: <span data-bind="text: val"></span>
        </p>
        <!-- /ko -->
    </div>
    <div class="eeprom-capabilities">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th class="capability">{{ _("Capability") }}</th>
                    <th class="value">{{ _("Enabled") }}</th>
                </tr>
            </thead>
            <tbody>
                <!-- ko foreach: info.capabilities -->
                <tr>
                    <td data-bind="text: cap"></td>
                    <td>
                        <i class="fa" data-bind="css: {'fa-check text-success': val, 'fa-times text-error': !val}"></i>
                        <span data-bind="text: val ? 'True' : 'False'"></span>
                    </td>
                </tr>
                <!-- /ko -->
            </tbody>
        </table>
    </div>
</div>
